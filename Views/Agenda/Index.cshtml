@model IEnumerable<G2_PetProtect.Models.Agenda.Agenda>
@{
    ViewBag.Title = "Index";
}

<hr>
@Html.ActionLink("Adicionar consulta", "Adicionar", null, new { @class = "btn btn-primary" })
<hr />

<table class="table">
    <tr>

        <td>
            Data
        </td>

        <td>
           Cliente
        </td>
        <td>
           Pet
        </td>
        <td>
            Serviço
        </td>
        <td>
           Porte Pequeno
        </td>
        <td>
            Porte Médio
        </td>
        <td>
            Porte Grande
        </td>
        <td>
            Funcionario
        </td>
        <td>
           
        </td>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
         
            <td>
                @Html.DisplayFor(modelItem => item.data)
            </td>
       
            <td>
                @Html.DisplayFor(modelItem => item.pets.nomeDono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pets.nomePet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servico.nomeServico)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servico.precoP)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servico.precoM)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.servico.precoG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.funcionario.nomeFuncionario)
            </td>
            <td>
                @Html.ActionLink("Editar", "EditarAgenda", null, new { pId = item.idAgenda }, new { @class = "btn btn-primary", }) |
                @Html.ActionLink("Deletar", "Deletar", new { pId = item.idAgenda }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>

